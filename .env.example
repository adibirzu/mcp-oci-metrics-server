# OCI MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Your OCI compartment OCID where resources are located
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id-here

# Required: Your OCI region (e.g., us-ashburn-1, eu-frankfurt-1, ap-tokyo-1)
OCI_REGION=us-ashburn-1

# Optional: OCI CLI configuration file path (defaults to ~/.oci/config)
OCI_CONFIG_FILE=~/.oci/config

# Optional: OCI CLI profile to use (defaults to DEFAULT)
OCI_CONFIG_PROFILE=DEFAULT

# Optional: Node.js environment (development, production)
NODE_ENV=production

# Optional: Enable debug logging
DEBUG=false